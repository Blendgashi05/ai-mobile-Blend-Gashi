modules = ["dart-3.8", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["flutter"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter App"

[[workflows.workflow]]
name = "Flutter App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python3 serve.py"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 41487
externalPort = 3000

[deployment]
deploymentTarget = "static"
publicDir = "build/web"
